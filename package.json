{
  "name": "hook",
  "version": "1.0.0",
  "description": "A lightweight UI library",
  "main": "index.js",
  "exports": {
    ".": "./output/index.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run output:watch\" \"npm run playground:watch\" \"npm run bench:watch\" \"npm run playground:start\" \"npm run bench:start\"",
    "output:build": "cd output && npm run build",
    "output:watch": "cd output && npm run watch",
    "playground:start": "cd playground && npm run start",
    "playground:build": "cd playground && npm run build",
    "playground:watch": "cd playground && npm run watch",
    "bench:start": "cd bench && npm run start",
    "bench:build": "cd bench && npm run build",
    "bench:watch": "cd bench && npm run watch",
    "lint": "eslint ./src --config .eslintrc"
  },
  "repository": {
    "type": "git",
    "url": "git@git.itim.vn:ads-frontend/hook.git"
  },
  "author": "CocCoc Ad Platform",
  "license": "MIT",
  "devDependencies": {
    "chalk": "^5.0.1",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "hook": "file:deps/core"
  }
}
