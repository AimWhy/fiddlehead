{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "object-curly-spacing": ["warn", "never"],
        "eol-last": ["warn", "always"]
    },
    "ignorePatterns": [
        "**/*.html"
    ],
    "globals": {
        "__DEV__": true
    }
}
